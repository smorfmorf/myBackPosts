generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  fullName String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  text     String
  imageUrl String?

  author   User @relation(fields: [authorId], references: [id]) //`author` обязательное поле для js.
  authorId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
